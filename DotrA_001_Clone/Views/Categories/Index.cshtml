@model IEnumerable<DotrA_001_Clone.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">訂單管理</strong>
                        <button type="button" class="btn btn-outline-info" data-toggle="modal"
                                data-target="#exampleModal" id="create">
                            新增
                        </button>
                        <!-- <button id="create" type="button" class="btn btn-outline-info">新增</button> -->
                        <!-- 參考1014storage2 -->
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Picture)</th>
                                    <th>修改</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Picture)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }
                                <tr>
                            </tbody>
                        </table>
                    </div>
                </div><!-- .animated -->
            </div><!-- .content -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#bootstrap-data-table-export').DataTable();

        });
    </script>
}
