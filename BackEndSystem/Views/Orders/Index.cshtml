@model IEnumerable<BackEndSystem.Models.ViewModel.OrderIndex>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">訂單列表</strong>
                    </div>
                    <div class="card-body">
                        <table id="Orders-data-table" class="table table-striped table-bordered text-center" >
                            <thead>
                                <tr style="height:3rem">
                                    <th>@Html.DisplayNameFor(m => m.OrderID)</th>
                                    <th>@Html.DisplayNameFor(m => m.MemberName)</th>
                                    <th>@Html.DisplayNameFor(m => m.ShipperName)</th>
                                    <th>@Html.DisplayNameFor(m => m.TotalPrice)</th>
                                    <th>@Html.DisplayNameFor(m => m.PaymentMethod)</th>
                                    <th>@Html.DisplayNameFor(m => m.OrderDate)</th>
                                    <th>@Html.DisplayNameFor(m => m.PaymentStatus)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                                {
                                <tr onclick="location.href = '@Url.Action("Details", "Orders", new { id = m.OrderID })'" style="height:3rem">
                                    <td>@Html.DisplayFor(x => m.OrderID)</td>
                                    <td>@Html.DisplayFor(x => m.MemberName)</td>
                                    <td>@Html.DisplayFor(x => m.ShipperName)</td>
                                    <td>@Html.DisplayFor(x => m.TotalPrice)</td>
                                    <td>@Html.DisplayFor(x => m.PaymentMethod)</td>
                                    <td>@Html.DisplayFor(x => m.OrderDate)</td>
                                    @if (m.PaymentStatus == 1)
                                    {
                                        <td><span class="badge badge-success">付款完成</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-secondary">尚未付款</span></td>
                                    }

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
@section scripts{

    @Scripts.Render("~/bundles/datatable")

    <script type="text/javascript">
        jQuery(document).ready(function () {
    jQuery('#Orders-data-table').DataTable({
        language: {
            "decimal": "",
            "emptyTable": "無資料...",
            "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
            "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
            "infoFiltered": "(從 _MAX_ 項結果中過濾)",
            "infoPostFix": "",
            "thousands": ",",
            "lengthMenu": "顯示 _MENU_ 項結果",
            "loadingRecords": "載入中...",
            "processing": "處理中...",
            "zeroRecords": "沒有符合的結果",
            "search": "搜尋:",
            "paginate": {
                "first": "第一頁",
                "previous": "上一頁",
                "next": "下一頁",
                "last": "最後一頁"
            },
            "aria": {
                "sortAscending": ": 升冪排列",
                "sortDescending": ": 降冪排列"
            }
        },
         "order": [[ 0, "desc" ]]

    });
});
