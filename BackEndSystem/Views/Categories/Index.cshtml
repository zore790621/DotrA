@model IEnumerable<Database.Models.Category>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">類型管理</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table"  class="table table-condensed">

                            <p>
                                @Html.ActionLink("新增類型", "Create", new { @class = "btn btn-default"})
                            </p>

                            <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Picture)
                                </th>
                                <th>
                                    狀態
                                </th>
                            </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Picture)
                                        </td>


                                        <td>
                                            @Html.ActionLink("編輯", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-outline-success" })
                                            @Html.ActionLink("刪除", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-outline-primary" })
                                        </td>
                                    </tr>
                                }</tbody>
                         </table>
                    </div>
                </div><!-- .animated -->
            </div><!-- .content -->
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/datatable")
    <script type="text/javascript">
        $(document).ready(function () {   
            $('#bootstrap-data-table-export').DataTable();
            $("#cancel").click(function (e) {
                $(".htesxt").html("");

            });
        });
    </script>

}


