@{ Layout = "~/Views/Shared/_LogInLayout.cshtml";}
<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo">
                <a href="index.html">
                    <img class="align-content" src="~/assets/images/logo.png" alt="">
                </a>
            </div>
            <div class="login-form">
                <form id="form1" action="/LogIn/LogIn" method="POST">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>帳號</label>
                        <input type="text" name="AdminAccount" class="form-control" placeholder="Account">
                    </div>
                    <div class="form-group">
                        <label>密碼</label>
                        <input type="password" name="AdminPW" class="form-control" placeholder="Password">
                    </div>
                    @*帳號密碼錯誤時會顯示錯誤訊息*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">登入</button>
                </form>
            </div>
        </div>
    </div>
</div>




