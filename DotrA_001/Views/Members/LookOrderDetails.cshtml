@model DotrA_001.Models.ViewModels.OrderDetailVM

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-wrap hero-bread" style="background-image:url(../../Assets/images/bg_6.jpg)">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                @*<p class="breadcrumbs">
                        <span class="mr-2"><a href="@Url.Action("Index","Home")">Home</a></span>
                        <span>Registration</span>
                    </p>*@
                <h1 class="mb-0 bread">Order Details</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section bg-light">
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title text-center">訂單明細</strong>
                        </div>
                        <div class="card-body container">
                            <div class="row">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.OrderID)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.OrderID)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RecipientName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RecipientName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RecipientPhone)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RecipientPhone)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RecipientAddress)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RecipientAddress)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.OrderDate)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.OrderDate)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.MemberName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.MemberName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ShipperName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ShipperName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PaymentMethod)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.PaymentMethod)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PaymentStatus)
                                    </dt>
                                    @if (Model.PaymentStatus == 1)
                                    {
                                        <dd><span class="badge badge-success">付款完成</span></dd>
                                    }
                                    else
                                    {
                                        <dd><span class="badge badge-secondary"><a href="@Url.Action("Payment","Order", new { id= Model.OrderID})">尚未付款</a></span></dd>
                                    }
                                </dl>
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => (new DotrA_001.Models.ViewModels.OrderProductVM()).ProductName)</th>
                                        <th>@Html.DisplayNameFor(model => (new DotrA_001.Models.ViewModels.OrderProductVM()).Quantity)</th>
                                        <th>@Html.DisplayNameFor(model => (new DotrA_001.Models.ViewModels.OrderProductVM()).SalesPrice)</th>
                                        <th>@Html.DisplayNameFor(model => (new DotrA_001.Models.ViewModels.OrderProductVM()).Discount)</th>
                                        <th>@Html.DisplayNameFor(model => (new DotrA_001.Models.ViewModels.OrderProductVM()).SubTotal)</th>
                                    </tr>
                                    @foreach (var item in Model.OrderProducts)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(x => @item.ProductName)</td>
                                            <td>@Html.DisplayFor(x => @item.Quantity)</td>
                                            <td>@Html.DisplayFor(x => @item.SalesPrice)</td>
                                            @if (item.Discount == null)
                                            {
                                                <td>無</td>
                                            }
                                            else
                                            {
                                                <td>@item.Discount</td>
                                            }
                                            <td>@Html.DisplayFor(x => @item.SubTotal)</td>
                                        </tr>
                                    }
                                </table>
                                <dl>
                                    @Html.DisplayNameFor(model => model.TotalPrice)
                                </dl>
                                <dl>
                                    @Html.DisplayFor(model => model.TotalPrice)
                                </dl>
                                @*<button type="button" class="btn btn-secondary" onclick="location.href = '@Url.Action("Delete", "Orders", new { id = Model.OrderID})'">刪除</button>*@
                            </div>
                            <button type="button" class="btn btn-light" style="float:right" onclick="location.href ='@Url.Action("SelfOrder", "Members",new { id = Model.MemberID})'">返回列表</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


